{
    "compilerOptions": {
        "sourceMap": false,
        "noImplicitAny": true,
        "module": "CommonJS",
        "target": "ES5",
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "removeComments": false,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "downlevelIteration": true,
        "skipLibCheck": true,
        "declaration": true,
        "declarationMap": true,
        "declarationDir": "./dist",
        "outDir": "./dist",
        "baseUrl": "./src"
    },
    "include": ["src/**/*"],
    "exclude": ["webpack.config.ts"]
}
